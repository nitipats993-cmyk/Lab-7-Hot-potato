#include <iostream>
#include <list>

using namespace std;

int main(){
    list<int> people;
    list<int> passed;
    int N, M;

    cout << "Enter the number of people: ";//
    cin >> N;
    cout << "Enter the passed number: ";
    cin >> M;

    for(int i=0; i<N; i++){ // Allocating how many people playing in the game.
        people.push_back(i+1);
    }
    list<int>::iterator potato = people.begin();// Starting from the first person.

    while(people.size() > 1){
        for(int i=0; i<M-1; i++){
            potato++;
            if(potato == people.end()){
                potato = people.begin();
            }
        }
        passed.push_back(*potato);
        potato = people.erase(potato);
        if(potato == people.end()){
            potato = people.begin();
        }
    }

    



    cout << "The last person standing is: " << people.front() << endl;
    return 0;
}
